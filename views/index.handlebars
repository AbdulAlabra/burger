<style>
    .eaten {
        color: red;
    }



    h1 {
        margin-top: 2%;
        text-align: center;
    }
</style>

<h1>Eat Da Burger</h1>
<hr>

<div class="container">

    <div class="row">
        <ul class="eaten-table col-md-6">
            <h2>Eaten Burger</h2>

            {{#each eaten}}
            <li id="{{id}}" class="eaten">{{burger_name}}</li>
            {{/each}}

        </ul>
        <div class="col-md-6">

            <h2>YOU MUST EAT !</h2>
            <ul class="not-eaten-table">

                {{#each notEaten}}
                <li id="{{id}}" class="not-eaten">{{burger_name}}</li>
                {{/each}}
            </ul>

            <button type="button" class="eat-it btn btn-outline-danger">EAT NOW !</button>

        </div>
    </div>
    <br>
    <div class="input-group mb-3">
        <input type="text" class="meal form-control" placeholder="Cheese burger" aria-label="Recipient's username" aria-describedby="button-addon2">
        <div class="input-group-append">
            <button class="add-meal btn btn-outline-secondary" type="button" id="button-addon2">Add Meal !</button>
        </div>
    </div>
</div>

<br>
<br>
<button type="button" class="btn btn-primary btn-lg btn-block">Block level button</button>




<script>

    $('.eat-it').on('click', function () {
        $('.not-eaten').each(function () {
            var thisId = $(this).attr('id');
            var text = $(this).text();
            $('.eaten-table').append("<li class=eaten id=" + thisId + ">" + text + "</li>");
            $(this).remove();
        });

    });

    $(".add-meal").on('click', function () {
        var ids_array = [];

        $('li').each(function () {

            var currentIDs = $(this).attr('id');
            ids_array.push(Number(currentIDs));

        });
        console.log(ids_array);

        var newId = Math.max(...ids_array) + 1;

        var userInput = $(".meal").val().trim();
        $(".not-eaten-table").append("<li class=not-eaten id=" + newId + ">" + userInput + "</li>")
        
        $(".meal").val("")
    });




</script>